<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KawaKloud2.Views.AnimeForKidsPage"
             xmlns:vm="clr-namespace:KawaKloud2.ViewModels"
             Title="Anime for Kids">

      <ContentPage.BindingContext>
        <vm:AnimeForKidsPageViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="10">
        <SearchBar Placeholder="Search kids anime..." />

        <CollectionView ItemsSource="Binding KidsAnimeList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Title}" FontSize="18"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>

</ContentPage>
