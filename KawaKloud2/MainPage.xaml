<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KawaKloud2.MainPage">

     <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="{Binding WelcomeText}" FontSize="24" />
    

        <Button Text="Popular Anime" Clicked="OnPopularAnimeClicked"/>
        <Button Text="Anime for Kids" Clicked="OnKidsAnimeClicked"/>
        <Button Text="Newly Released" Clicked="OnNewlyReleasedClicked"/>
        <Button Text="Favorites" Clicked="OnFavoritesClicked" />
    </VerticalStackLayout>
</ContentPage>
