<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="KawaKloud.Views.NewlyReleasedPage"
             Title="Newly Released"
             xmlns:vm="clr-namespace:KawaKloud.ViewModels">

    <ContentPage.BindingContext>
        <vm:NewlyReleasedPageViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="10">
        <SearchBar Placeholder="Search new anime..." />

        <CollectionView ItemsSource="{Binding NewReleases}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Title}" FontSize="18"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
