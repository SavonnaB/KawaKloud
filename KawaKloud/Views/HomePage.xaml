<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="KawaKloud.Views.HomePage"
             Title="Home"
             xmlns:vm="clr-namespace:KawaKloud.ViewModels">
    <ContentPage.BindingContext>
        <vm:HomePageViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="{Binding WelcomeText}" FontSize="24" />
    

        <Button Text="Popular Anime" Clicked="OnPopularAnimeClicked"/>
        <Button Text="Anime for Kids" Clicked="OnKidsAnimeClicked"/>
        <Button Text="Newly Released" Clicked="OnNewlyReleasedClicked"/>
        <Button Text="Favorites" Clicked="OnFavoritesClicked" />
    </VerticalStackLayout>

</ContentPage>
